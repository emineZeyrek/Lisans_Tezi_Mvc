
@{
    Layout = "~/Views/Stock/StockTransactionRecords/_LayoutStockTransactionRecords.cshtml";
    ViewData["Title"] = "stockTransactionRecords";
}
@model dynamic
 <div class="container"  >
        <div class="row">
            <div class="col-md-12">

            <form method="post" asp-controller="StockTransactionRecords" asp-action="CreateStockTransactionRecords">

                
         
                        <div class="col-md-12">
                            <div class="row mt-2">
                             


                            <div class="row mt-2">
                                <div class="col-md-2">
                                    <label for="stok_kodu">Stok kodu:</label>
                                </div>
                                <div class="col-md-5 text-start">
                                    <select id="STOK_KODU" name="STOK_KODU" class="form-control">
                                        <option value="">Seçiniz</option>
                                        @foreach (var item in ViewBag.data1)
                                        {
                                            <option value="@item.STOK_KODU">@item.STOK_ADI</option>
                                        }
                                    </select>
                                </div>
                              
                             
                            </div>

                        </div>


                        <div class="row mt-1">
                            <div class="col-md-12">
                                <div class="card">
                                   
                                    <div class="card-body">
                                        <div class="row">
                                            <div class="col">
                                                <label for="TARIH">Tarih</label>
                                            </div>
                                            <div class="col">
                                                <input class="form-control " name="TARIH" type="text">
                                            </div>

                                            <div class="col">
                                                <label for="FIS_NO">Fiş No</label>
                                            </div>
                                            <div class="col">
                                                <input class="form-control " name="FIS_NO" type="number">
                                            </div>

                                            <div class="col">
                                                <label for="FIYAT">Fiyat</label>
                                            </div>

                                            <div class="col">
                                                <input class="form-control " name="FIYAT" type="number">
                                            </div>
                                            <div class="col">
                                                <div class="form-check">
                                                    <input class="form-check-input" type="radio" name="STOK_HAREKET_DURUMU" id="flexRadioDefault1">
                                                    <label class="form-check-label" for="flexRadioDefault1">
                                                      Giriş
                                                    </label>
                                                  </div>
                                            </div>

                                            <div class="col">
                                                <div class="form-check">
                                                    <input class="form-check-input" type="radio" name="STOK_HAREKET_DURUMU" id="flexRadioDefault1">
                                                    <label class="form-check-label" for="flexRadioDefault1">
                                                      Çıkış
                                                    </label>
                                                  </div>
                                            </div>
                                            <div class="col">
                                                <label for="DEPO_KODU">Depo</label>
                                            </div>
                                            <div class="col">
                                                <select id="DEPO_KODU" name="DEPO_KODU" class="form-control">
                                                    <option value="">Seçiniz</option>
                                                    @foreach (var item in ViewBag.data2)
                                                    {
                                                        <option value="@item.DEPO_KODU">@item.DEPO_ADI</option>
                                                    }
                                                </select>
                                            </div>


                                           
                                        </div>

                                        <div class="row mt-1">
                                            <div class="col-md-12">
                                            <div class="row">
                                                <div class="col">
                                                    <label for="MALIYET">Maliyet</label>
                                                </div>

                                                <div class="col">
                                                    <input class="form-control " name="MALIYET" type="number">
                                                </div>
                                                
                                                <div class="col">
                                                    <label for="ACIKLAMA">Açıklama</label>
                                                </div>

                                                <div class="col-md-2">
                                                        <input class="form-control " name="ACIKLAMA" type="text">
                                                </div>

                                                
                                          
                                            
                                                <div class="col">
                                                    <label for="MALIYET_FIYATI">Maliyet Fiyatı</label>
                                                </div>

                                                <div class="col">
                                                        <input class="form-control " name="MALIYET_FIYATI" type="number">
                                                </div>
                                              

                                            </div>
                                        </div>
                                        </div>
                                        
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row mt-1">
                            <div class="col">
                                <table class="table">
                                    <thead>
                                      <tr>
                                        <th scope="col">#</th>
                                        <th scope="col">Stok Kodu</th>
                                        <th scope="col">Tarih</th>
                                        <th scope="col">Fiş No</th>
                                        <th scope="col">Fiyat</th>
                                        <th scope="col">Stok Hareket Durumu</th>
                                        <th scope="col">Depo Kodu</th>
                                        <th scope="col">Bakiye Miktarı</th>
                                        <th scope="col">Maliyet</th>
                                        <th scope="col">Açıklama</th>
                                   
                                     

                                      </tr>
                                    </thead>
                                <tbody>
                                    @foreach (var item in ViewBag.data3)
                                    {
                                        <tr>
                                            <th scope="row">@item.Id</th>
                                            <td>@item.STOK_KODU</td>
                                            <td>@item.TARIH</td>
                                            <td>@item.FIS_NO</td>
                                            <td>@item.FIYAT</td>
                                            <td>@item.STOK_HAREKET_DURUMU</td>
                                            <td>@item.DEPO_KODU</td>
                                            <td>@item.BAKIYE_MIKTARI</td>
                                            <td>@item.MALIYET</td>
                                            <td>@item.ACIKLAMA</td>
                                         
                                        </tr>
                                    }
                                </tbody>
                                
                                  </table>
                           

                            </div>
                        </div>

                        <div class="row mt-1">
                            <div class="col-md-12">
                                <div class="card">
                                    <div class="card-body">
                                        <div class="row">
                                            <div class="col-md-2">
                                                <label for="GIRIS_MIKTARI">Giriş Miktarı</label>
                                            </div>
                                            <div class="col-md-2">
                                                <input class="form-control " name="GIRIS_MIKTARI" type="number">
                                            </div>
                                            <div class="col-md-2">
                                                <label for="CIKIS_MIKTARI">Çıkış Miktarı</label>
                                            </div>
                                            <div class="col-md-2">
                                                <input class="form-control " name="CIKIS_MIKTARI" type="number">
                                            </div>
                                            <div class="col-md-2">
                                                <label for="BAKIYE_MIKTARI">Bakiye Miktarı</label>
                                            </div>
                                            <div class="col-md-2">
                                                <input class="form-control " name="BAKIYE_MIKTARI" type="number">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        
                        <div class="row">
                            <div class="col-md-12">
                                <div class="card">
                                    <div class="card-body">
                                        <div class="row">
                                            <div class="col-md-2">
                                                <label for="GIRIS_TUTARI">Giriş Tutarı</label>
                                            </div>
                                            <div class="col-md-2">
                                                <input class="form-control " name="GIRIS_TUTARI" type="number">
                                            </div>
                                            <div class="col-md-2">
                                                <label for="CIKIS_TUTARI">Çıkış Tutarı</label>
                                            </div>
                                            <div class="col-md-2">
                                                <input class="form-control " name="CIKIS_TUTARI" type="number">
                                            </div>
                                            
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>


                    <div class="row mt-2">
                        <div class="col-md-1 text-start">
                            <button type="submit" class="btn btn-success">Ekle</button>
                        </div>
                    </div>
                         
                    </div>
                 </form>
              
                </div>  
             </div>       
          </div>

