
@{
    Layout = "~/Views/Stock/WareHouseOperations/_LayoutWarehouseOperations.cshtml";
    ViewData["Title"] = "WarehouseDefinition";
}
@model dynamic

<div class="container" >
    <div class="row">
        <div class="col-md-12">
            <form method="post" asp-controller="WarehouseDefinition" asp-action="CreateWarehouseDefinition">

                <div class="row">
                    <div class="row mt-2">
                        <div class="col-md-12">
                            <div class="card">
                                <div class="card-body">
                                    <div class="col-md-12"><label>DEPO TANIMI</label></div>
                                </div>
                            </div>

                            <div class="card">
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="row mt-2">
                                                <div class="col-md-3">
                                                    <label for="DEPO_KODU_LBL">Depo Kodu:</label>
                                                </div>
                                                <div class="col-md-6 text-start">
                                                    <input class="form-control " name="DEPO_KODU" type="text">
                                                </div>
                                             
                                            </div>


                                        </div>
                                        <div class="col-md-6">
                                            <div class="row mt-2">
                                                <div class="col-md-3">
                                                    <label for="DEPO_ADI_TBL">Depo Adı:</label>
                                                </div>
                                                <div class="col-md-6 text-start">
                                                    <input class="form-control " name="DEPO_ADI" type="text">
                                                </div>

                                            </div>
                                        </div>


                                        <div class="row mt-2">
                                            <div class="col-md-8">
                                                <div class="card">
                                                    <h5 class="card-header">Tanım</h5>
                                                    <div class="card-body">

                                                        <div class="row mt-3">
                                                            <div class="col">
                                                                <div class="form-check">
                                                                    <input class="form-check-input" type="checkbox" value="true" name="E_TICARET" id="E_TICARET">
                                                                    <label class="form-check-label" for="E_TICARET">
                                                                        E-ticaret için kullanılacak mı?
                                                                    </label>
                                                                </div>


                                                            </div>

                                                        </div>

                                                        <div class="row mt-2">
                                                            <div class="col-md-3">
                                                                <label for="TESIS_KODU">Hangi Tesisin, Şubenin Deposu?:</label>
                                                            </div>
                                                            <div class="col-md-4 text-start">
                                                                <input class="form-control " name="TESIS_KODU" type="text">
                                                            </div>
                                                          
                                                        </div>

                                                        <div class="row mt-2">
                                                            <div class="col-md-3">
                                                                <label for="LOKASYON_KODU">Depo Lokasyonu Kodu:</label>
                                                            </div>
                                                            <div class="col-md-4 text-start">
                                                                <input class="form-control " name="LOKASYON_KODU" id="LOKASYON_KODU" type="text">
                                                            </div>
                                                        
                                                        </div>


                                                    </div>
                                                </div>
                                            </div>
                                        </div>






                                        <div class="row mt-3">
                                            <div class="col-md-8">
                                                <div class="card">
                                                    <h5 class="card-header">İlgili Kişiler</h5>
                                                    <div class="card-body">


                                                        <div class="row mt-2">
                                                            <div class="col-md-3">
                                                                <label for="stok_kodu">İlgili Personel</label>
                                                            </div>
                                                          
                                                            
                                                                <div class="col-md-9 text-start">
                                                                <select id="PERSONEL_ID" name="PERSONEL_ID" class="form-control">
                                                                    <option value="">Seçiniz</option>
                                                                    @foreach (var item in ViewBag.data2)
                                                                    {
                                                                        <option value="@item.Id">@item.PERSONEL_ISIM</option>
                                                                    }
                                                                </select>

                                                                </div>

                                                         
                                                          
                                                        </div>

                                                        <div class="row mt-2">
                                                            <div class="col-md-3">
                                                                <label for="PERSONEL_IS">İlgili Personel İş Tanımı:</label>
                                                            </div>
                                                            <div class="col-md-4 text-start">
                                                                <input class="form-control " name="PERSONEL_IS"id="PERSONEL_IS" type="text">
                                                            </div>
                                                          
                                                        </div>


                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="row mt-2">
                                            <div class="col-md-1 text-start">
                                                <button type="submit" class="btn btn-success">Ekle</button>
                                            </div>
                                        </div>



                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>

    

            </form>

            <div class="row mt-3">
                <div class="col">

                    @if (ViewBag.data1 != null && ViewBag.data1.Count > 0)
                    {
                        <table class="table">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Depo Kodu</th>
                                    <th scope="col">Depo Adı</th>
                                    <th scope="col">E-Ticaret</th>
                                    <th scope="col">Tesis Kodu</th>
                                    <th scope="col">Lokasyon Kodu</th>
                                    <th scope="col">Personel Id</th>
                                    <th scope="col">Personel İş</th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in ViewBag.data1)
                                {
                                    <tr>
                                        <th scope="row">@item.Id</th>
                                        <td>@item.DEPO_KODU</td>
                                        <td>@item.DEPO_ADI</td>
                                        <td>@item.E_TICARET</td>
                                        <td>@item.TESIS_KODU</td>
                                        <td>@item.LOKASYON_KODU</td>
                                        <td>@item.PERSONEL_ID</td>
                                        <td>@item.PERSONEL_IS</td>


                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <p>Kayıt bulunamadı.</p>
                    }

                </div>
            </div>
        </div>

    </div>
</div>

