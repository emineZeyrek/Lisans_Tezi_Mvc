
@{
    Layout = "~/Views/Stock/AccountingDetailCodeEntry/_LayoutAccountingDetailCodeEntry.cshtml";
    ViewData["Title"] = "AccountingDetailCodeEntry";
}

@model dynamic
 <div class="container" >
        <div class="row">
            <div class="col-md-12">
            <form method="post" asp-controller="AccountingDetailCodeEntry" asp-action="CreateAccountingDetilCodeControllerDefinition">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="row mt-2">
                                <div class="col-md-2">
                                    <label for="MUHASEBE_KODU"> Muhasebe Kodu:</label>
                                </div>
                                <div class="col-md-4 text-start">
                                <select id="MUHASEBE_KODU" name="MUHASEBE_KODU" class="form-control">
                                    <option value="">Seçiniz</option>
                                    @foreach (var item in ViewBag.data1)
                                    {
                                        <option value="@item.MUHASEBE_KODU">@item.MUHASEBE_KODU</option>
                                    }
                                </select>
                                </div>
                             
                            </div>

                        </div>
                        <div class="row mt-1">
                            <div class="col-md-12">
                                <div class="card">
                                   
                                    <div class="card-body">
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="row">
                                            <div class="col">
                                                <label for="ALIS_HESABI">Alış Hesabı</label>
                                            </div>
                                            <div class="col">
                                                    <select id="ALIS_HESABI" name="ALIS_HESABI" class="form-control">
                                                        <option value="">Seçiniz</option>
                                                        @foreach (var item in ViewBag.data2)
                                                        {
                                                            <option value="@item.MUHASEBE_KODU">@item.MUHASEBE_KODU</option>
                                                        }
                                                    </select>
                                            </div>
                                        
                                        
                                        </div>
                                        <div class="row mt-1">
                                            <div class="col">
                                                <label for="ALISTAN_IADE_HESABI">Alıştan İade Hesabı</label>
                                            </div>
                                            <div class="col">
                                                    <select id="ALISTAN_IADE_HESABI" name="ALISTAN_IADE_HESABI" class="form-control">
                                                        <option value="">Seçiniz</option>
                                                        @foreach (var item in ViewBag.data3)
                                                        {
                                                            <option value="@item.MUHASEBE_KODU">@item.MUHASEBE_KODU</option>
                                                        }
                                                    </select>
                                            </div>
                                            
                                        </div>
                                        <div class="row mt-1">
                                            <div class="col">
                                                <label for="SATIS_HESABI">Satış Hesabı</label>
                                            </div>
                                            <div class="col">
                                                    <select id="SATIS_HESABI" name="SATIS_HESABI" class="form-control">
                                                        <option value="">Seçiniz</option>
                                                        @foreach (var item in ViewBag.data4)
                                                        {
                                                            <option value="@item.MUHASEBE_KODU">@item.MUHASEBE_KODU</option>
                                                        }
                                                    </select>
                                            </div>
                                            
                                      

                                        </div>
                                        <div class="row mt-1">
                                            <div class="col">
                                                <label for="SATISTAN_IADE_HESABI">Satıştan İade Hesabı</label>
                                            </div>
                                            <div class="col">
                                                    <select id="SATISTAN_IADE_HESABI" name="SATISTAN_IADE_HESABI" class="form-control">
                                                        <option value="">Seçiniz</option>
                                                        @foreach (var item in ViewBag.data5)
                                                        {
                                                            <option value="@item.MUHASEBE_KODU">@item.MUHASEBE_KODU</option>
                                                        }
                                                    </select>
                                            </div>
                                            
                                        </div>
                                        </div>

                                    
                                </div>
                            </div>
                        </div>

                        <div class="row mt-1">
                            <div class="col">
                                <table class="table">
                                    <thead>
                                      <tr>
                                        <th scope="col">#</th>
                                        <th scope="col">Muhasebe Kodu</th>
                                        <th scope="col">Alış Hesabı</th>
                                        <th scope="col">Alıştan İade Hesabı</th>
                                        <th scope="col">Satış Hesabı</th>
                                        <th scope="col">Satıştan İade Hesabı</th>
                                      </tr>
                                    </thead>
                                    <tbody>
                                            @foreach (var item in ViewBag.data6)
                                            {
                                                <tr>
                                                    <th scope="row">@item.Id</th>
                                                    <td>@item.MUHASEBE_KODU</td>
                                                    <td>@item.ALIS_HESABI</td>
                                                    <td>@item.ALISTAN_IADE_HESABI</td>
                                                    <td>@item.SATIS_HESABI</td>
                                                    <td>@item.SATISTAN_IADE_HESABI</td>
                                                </tr>
                                            }
                                    </tbody>
                                  </table>

                            </div>
                        </div>
              </div>
                </div>
                    <div class="row mt-2">
                        <div class="col-md-1 text-start">
                            <button type="submit" class="btn btn-success">Ekle</button>
                        </div>
                    </div>

            </form>
              </div>
            </div>
        </div>

