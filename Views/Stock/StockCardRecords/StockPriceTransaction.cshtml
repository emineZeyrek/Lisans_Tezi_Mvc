@{
    Layout = "~/Views/Stock/StockCardRecords/_LayoutStockCardRecords.cshtml";
    ViewData["Title"] = "StockPriceTransaction";
}

<div class="container" style="background-color: grey;">
    <div class="row">
        <div class="col-md-12">
            <form action="post">

                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-body">
                                <label>STOK FİYAT LİSTESİ</label>
                            </div>
                        </div>

                        <div class="card">
                            <div class="card-body">
                                <div class="col-md-12">
                                    <div class="row">
                                        <div class="col-md-2">
                                            <label for="stok_kodu"> Fiyat Listesi Kodu:</label>
                                        </div>
                                        <div class="col-md-3 text-start">
                                            <input class="form-control " id="stok_kodu" type="text">
                                        </div>
                                        <div class="col-md-1 text-start">
                                            <button type="button" class="btn btn-success">Seçiniz</button>
                                        </div>

                                        <div class="row mt-2">
                                            <div class="col-md-5">
                                                <label for="stok_kodu">Fiyat Tipi(Alış/Satış)</label>
                                            </div>
                                        </div>


                                        <div class="col-md-6">
                                            <div class="custom-select">
                                                <select>
                                                    <option selected disabled value="">Seçiniz...</option>
                                                    <option value="0">Alış</option>
                                                    <option value="1">Satış</option>
                                                </select>
                                            </div>
                                        </div>

                                        <div class="row mt-3">
                                            <div class="row">
                                                <div class="col-md-2">
                                                    <label for="stok_kodu">Başlangıç Tarihi:</label>
                                                </div>
                                                <div class="col-md-3 text-start">
                                                    <input class="form-control " id="stok_kodu" type="text">
                                                </div>


                                            </div>
                                        </div>



                                        <div class="row mt-3">
                                            <div class="row">
                                                <div class="col-md-2">
                                                    <label for="stok_kodu">Bitiş Tarihi:</label>
                                                </div>
                                                <div class="col-md-3 text-start">
                                                    <input class="form-control " id="stok_kodu" type="text">
                                                </div>

                                            </div>
                                        </div>

                                        <div class="row mt-3">
                                            <div class="row">
                                                <div class="col-md-2">
                                                    <label for="stok_kodu">Fiyat Listesi Açıklama:</label>
                                                </div>
                                                <div class="col-md-3 text-start">
                                                    <input class="form-control " id="stok_kodu" type="text">
                                                </div>

                                            </div>
                                        </div>




                                        <div class="row mt-2">
                                            <div class="col-md-12">
                                                <div class="card">
                                                    <h5 class="card-header">DETAY</h5>
                                                    <div class="card-body">
                                                        <div class="row">

                                                            <div class="col-md-3">
                                                                <div class="row mt-2">

                                                                    <label for="cars">Stok Kodu:</label>

                                                                    <select name="cars" id="cars">
                                                                        <option selected disabled value="">Seçiniz...</option>
                                                                        <option value="volvo">1</option>
                                                                        <option value="saab">2</option>
                                                                        <option value="mercedes">3</option>
                                                                        <option value="audi">4</option>
                                                                    </select>
                                                                </div>
                                                            </div>

                                                            <div class="col-md-4">
                                                                <div class="row mt-2">
                                                                    <div class="col-md-3">
                                                                        <label for="stok_kodu">Stok Adı:</label>
                                                                    </div>
                                                                    <div class="col-md-6 text-start">
                                                                        <input class="form-control " id="stok_kodu" type="text">
                                                                    </div>
                                                                </div>
                                                            </div>

                                                            <div class="col-md-4">
                                                                <div class="row mt-2">
                                                                    <div class="col-md-3">
                                                                        <label for="stok_kodu">Fiyat:</label>
                                                                    </div>
                                                                    <div class="col-md-6 text-start">
                                                                        <input class="form-control " id="stok_kodu" type="text">
                                                                    </div>
                                                                </div>
                                                            </div>
                                                            <div class="col-md-3">
                                                                <div class="row mt-2">

                                                                    <label for="cars">Para Birimi:</label>

                                                                    <select name="cars" id="cars">
                                                                        <option selected disabled value="">Seçiniz...</option>
                                                                        <option value="volvo">TL</option>
                                                                        <option value="saab">USD</option>
                                                                        <option value="mercedes">EURO</option>
                                                                    </select>
                                                                </div>
                                                            </div>

                                                            <div class="col-md-4">
                                                                <div class="row mt-2">
                                                                    <div class="col-md-5">
                                                                        <label for="stok_kodu"> Stok İşlem Birimi:</label>
                                                                    </div>


                                                                    <select name="cars" id="cars">
                                                                        <option selected disabled value="">Seçiniz...</option>
                                                                        <option value="volvo">Adet</option>
                                                                        <option value="saab">Kilogram</option>
                                                                        <option value="mercedes">Litre</option>
                                                                        <option value="audi">Metre</option>
                                                                    </select>

                                                                </div>
                                                            </div>

                                                            <div class="col-md-4">
                                                                <div class="row mt-2">
                                                                    <div class="col-md-5">
                                                                        <label for="stok_kodu">Kullanım Yeri:</label>
                                                                    </div>


                                                                    <select name="cars" id="cars">
                                                                        <option selected disabled value="">Seçiniz...</option>
                                                                        <option value="volvo">Satış</option>
                                                                        <option value="saab">Satınalma</option>
                                                                        <option value="mercedes">Tümü</option>
                                                                        <option value="audi">Kullanılmayacak</option>
                                                                    </select>

                                                                </div>
                                                            </div>






                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>

            </form>
        </div>
    </div>
</div>