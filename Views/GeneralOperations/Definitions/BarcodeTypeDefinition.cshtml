@model List<GENERAL_BARCODE_TYPE_DEFINITION>
@{
    Layout = "~/Views/GeneralOperations/Definitions/_LayoutDefinitions.cshtml";
    ViewData["Title"] = "BarcodeTypeDefinition";
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
                <div class="row">
                           <form asp-action="Add" method="post">
                    <div class="row mt-2">
                        <div class="col-md-2">

                            <label for="BARKOD_TIPI">Barkod Tipi:</label>
                        </div>
                        <div class="col-md-4 text-start">
                            <input class="form-control " name="BARKOD_TIPI" type="text">
                        </div>
                        <div class="col-md-2">

                            <label for="ACIKLAMA">Açıklama:</label>
                        </div>

                        <div class="col-md-4 text-start">
                            <input class="form-control " name="ACIKLAMA" type="text">
                        </div>
                    </div>
                    <button type="submit">Ekle</button>
                    </form>
                </div>

                <div class="row mt-1">
                    <div class="col">
                           @if (Model != null && Model.Count > 0)
                    {
                        <table class="table">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Barkod Tipi</th>
                                    <th scope="col">Açıklama</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <th scope="row">@item.Id</th>
                                        <td>@item.BARKOD_TIPI</td>
                                        <td>@item.ACIKLAMA</td>
                                       
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <p>Kayıt bulunamadı.</p>
                    }
                    </div>
                </div>
        </div>
    </div>
</div>