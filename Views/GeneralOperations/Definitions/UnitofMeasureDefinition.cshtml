@model List<GENERAL_MEASUREMENT_UNIT>
@{
    Layout = "~/Views/GeneralOperations/Definitions/_LayoutDefinitions.cshtml";
    ViewData["Title"] = "UnitofMeasureDefinition";
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
         

                <div class="row">
                         <form asp-action="Add" method="post">
                    <div class="row mt-2">
                        <div class="col-md-2">

                            <label for="OLCU_BIRIMI_KODU">Ölçü Birimi Kodu:</label>
                        </div>
                        <div class="col-md-4 text-start">
                            <input class="form-control " name="OLCU_BIRIMI_KODU" type="text">
                        </div>
                        <div class="col-md-2">

                            <label for="OLCU_BIRIMI_ADI">Ölçü Birimi Adı:</label>
                        </div>

                        <div class="col-md-4 text-start">
                            <input class="form-control " name="OLCU_BIRIMI_ADI" type="text">
                        </div>
                    </div>
                    <button type="submit">Ekle</button>
                </form>
                </div>

                <div class="row mt-1">
                    <div class="col">
                                  @if (Model != null && Model.Count > 0)
                    {
                        <table class="table">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                <th scope="col">Ölçü Birimi Kodu</th>
                                <th scope="col">Ölçü Birimi Adı</th>


                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <th scope="row">@item.Id</th>
                                        <td>@item.OLCU_BIRIMI_KODU</td>
                                        <td>@item.OLCU_BIRIMI_ADI</td>

                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <p>Kayıt bulunamadı.</p>
                    }

                    </div>
                </div>


        
        </div>
    </div>
</div>