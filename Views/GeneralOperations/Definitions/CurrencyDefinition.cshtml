@model List<GENERAL_CURRENCY_DEFINITION>
@{
    Layout = "~/Views/GeneralOperations/Definitions/_LayoutDefinitions.cshtml";
    ViewData["Title"] = "CurrencyDefinition";
}


<div class="container">
    <div class="row">
        <div class="col-md-12">
        

                <div class="row">
                       <form asp-action="Add" method="post">
                    <div class="row mt-2">
                        <div class="col-md-2">

                            <label for="PARA_BIRIMI_KODU">Para Birimi Kodu:</label>
                        </div>
                        <div class="col-md-4 text-start">
                            <input class="form-control " name="PARA_BIRIMI_KODU" type="text">
                        </div>
                        <div class="col-md-2">

                            <label for="PARA_BIRIMI_ADI">Para Birimi Adı:</label>
                        </div>

                        <div class="col-md-4 text-start">
                            <input class="form-control " name="PARA_BIRIMI_ADI" type="text">
                        </div>
                    </div>
                    <button type="submit">Ekle</button>
                </form>
                </div>

                <div class="row mt-1">
                    <div class="col">
                             @if (Model != null && Model.Count > 0)
                    {
                        <table class="table">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                <th scope="col">Para Birimi Kodu</th>
                                <th scope="col">Para Birimi Adı</th>


                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <th scope="row">@item.Id</th>
                                        <td>@item.PARA_BIRIMI_KODU</td>
                                        <td>@item.PARA_BIRIMI_ADI</td>

                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <p>Kayıt bulunamadı.</p>
                    }
                    </div>
                </div>


  
        </div>
    </div>
</div>